{
  "bool": {
    "should": [
      {
        "bool": {
          "must": [
            {
              "term": {
                "description.published": true
              }
            },
            {
              "bool": {
                "must_not": {
                  "term": {
                    "description.cancelled": true
                  }
                }
              }
            }
          ]
        }
      },
      {
        "bool": {
          "must": [
            {
              "term": {
                "description.cancelled": true
              }
            },
            {
              "range": {
                "description.releaseDate": {
                  "from": null,
                  "to": {{.Now.ESString}},
                  "include_lower": true,
                  "include_upper": true
                }
              }
            }
          ]
        }
      }
    ]
  }
}
